@model PolyathlonCompetition.Web.Models.Competition

@{
    ViewData["Title"] = "Создание соревнования";
}

<div class="container">
    <h2>Создание соревнования</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название соревнования</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Date" class="control-label">Дата проведения</label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Location" class="control-label">Место проведения</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Создать соревнование</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}