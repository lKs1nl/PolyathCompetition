@model IEnumerable<PolyathlonCompetition.Web.Models.Competitor>

@{
    ViewData["Title"] = "Участники";
}

<h2>Список участников</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить участника</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Номер</th>
            <th>ФИО</th>
            <th>Команда</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CompetitorNumber</td>
                <td>@item.LastName @item.FirstName @item.MiddleName</td>
                <td>@item.Team</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>